{
  "openapi": "3.0.0",
  "info": {
    "title": "Puppeteer MCP Server",
    "version": "1.0.0"
  },
  "paths": {
    "/screenshot": {
      "post": {
        "summary": "Take screenshot",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string"
                  }
                },
                "required": ["url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Screenshot PNG",
            "content": {
              "image/png": {}
            }
          }
        }
      }
    }
  }
}
